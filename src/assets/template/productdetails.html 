    <!-- Scroll to Top Button -->
    <button id="scrollTop" class="fixed bottom-8 right-8 w-14 h-14 bg-[#FF6B6B] text-white rounded-full flex items-center justify-center shadow-lg hover:bg-[#ff5252] transition-all duration-300 opacity-0 invisible">
